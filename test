-- Test: Does TWO buttons with Activated break it?

local Players = game:GetService("Players")
local player = Players.LocalPlayer

wait(1)

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "TestTwoButtons"
screenGui.Parent = player.PlayerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 320, 0, 280)
frame.Position = UDim2.new(0.5, -160, 0.5, -140)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 8)
corner.Parent = frame

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 40)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
title.BorderSizePixel = 0
title.Text = "Test Title"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextSize = 18
title.Font = Enum.Font.GothamBold
title.Parent = frame

local button1 = Instance.new("TextButton")
button1.Size = UDim2.new(0, 280, 0, 35)
button1.Position = UDim2.new(0.5, -140, 0, 50)
button1.BackgroundColor3 = Color3.fromRGB(60, 120, 200)
button1.BorderSizePixel = 0
button1.Text = "Button 1"
button1.TextColor3 = Color3.fromRGB(255, 255, 255)
button1.TextSize = 14
button1.Font = Enum.Font.Gotham
button1.Parent = frame

local button2 = Instance.new("TextButton")
button2.Size = UDim2.new(0, 280, 0, 35)
button2.Position = UDim2.new(0.5, -140, 0, 95)
button2.BackgroundColor3 = Color3.fromRGB(60, 120, 200)
button2.BorderSizePixel = 0
button2.Text = "Button 2"
button2.TextColor3 = Color3.fromRGB(255, 255, 255)
button2.TextSize = 14
button2.Font = Enum.Font.Gotham
button2.Parent = frame

local statusLabel = Instance.new("TextLabel")
statusLabel.Size = UDim2.new(0, 280, 0, 50)
statusLabel.Position = UDim2.new(0.5, -140, 0, 140)
statusLabel.BackgroundTransparency = 1
statusLabel.Text = "Status: Waiting..."
statusLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
statusLabel.TextSize = 12
statusLabel.Font = Enum.Font.Gotham
statusLabel.Parent = frame

-- Connect two buttons
button1.Activated:Connect(function()
    statusLabel.Text = "Button 1 clicked!"
end)

button2.Activated:Connect(function()
    statusLabel.Text = "Button 2 clicked!"
end)

game.StarterGui:SetCore("SendNotification", {
    Title = "Two Buttons Test",
    Text = "Testing if two Activated:Connect() calls work",
    Duration = 5
})


